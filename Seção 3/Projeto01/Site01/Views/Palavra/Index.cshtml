@using X.PagedList.Mvc.Core;
@using X.PagedList;


@model X.PagedList.IPagedList<Site01.Models.Palavra>
@{
    //Layout = "_Layout";  TANTO FAZ
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Palavra - Listagem";
}

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]
    </div>
}

<link href="/css/PagedList.css" rel="stylesheet" type="text/css" />

<a href="/palavra/cadastrar" class="btn btn-primary">Cadastrar</a>
<span><b>Total de palavras: </b>@Model.TotalItemCount</span>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Palavra</th>
            <th scope="col">Nível</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var palavra in Model)
        {
            <tr>
                <th scope="row">@palavra.Id</th>
                <td>@palavra.Nome</td>
                <td>@palavra.Nivel</td>
                <td>
                    <a href="/palavra/atualizar/@palavra.Id" class="btn btn-primary">Editar</a>
                    <a href="/palavra/excluir/@palavra.Id" class="btn btn-primary">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />
